@model IEnumerable<ClienteHttpMVC.DTO.EquipoDTO>

@{
    ViewData["Title"] = "ListarEquiposSegunMonto";
}

<h1>Listado de equipos segun monto</h1>
<h4 style="font-style:italic">Listado de equipos en los cuales algun usuario realizo un pago unico con un monto mayor al dado</h4>
@if(ViewBag.Error != null)
{
   <h3 style="color: red">@ViewBag.error</h3>
}
else
{
    <form asp-action="ListarEquiposSegunMonto" method="get" class="mb-3">
        <input type="number" name="monto" class="form-control" placeholder="Ingrese monto..." />
        <button type="submit" class="btn btn-primary">Procesar</button>
    </form>

    @if (Model == null)
    {
        <p>No hay resultados.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

